<div class="ui tiny inverted menu">
  <div class="ui container">
    <%= link_to 'Chatroom', root_path, class: "item" %>
    <% if logged_in? %>
      <a class="item">
        Messages
      </a>
    <% end %>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Log out', logout_path, class: 'item', method: :delete %>
          <% else %>
            <%= link_to 'Login', login_path, class: "item"%>
            <a class="item">Signup</a>
          <% end %>
        </div>
      </div>
      <% unless logged_in? %>
        <div class="item">
            <div class="ui primary button">Sign Up</div>
        </div>
      <% end %>
    </div>
  </div>
</div>