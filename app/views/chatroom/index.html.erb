<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Friends
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid chatbox raised card">
      <div class="content" id="messages">

        <div class="ui small feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, url: message_path, html: {class: "ui reply form", role: "form"}, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Enter message" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid chatbox raised card">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>